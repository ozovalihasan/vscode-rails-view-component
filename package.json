{
  "name": "rails-test",
  "displayName": "Rails Test",
  "description": "Completion provider for Rails ViewComponent",
  "version": "0.1.0",
  "publisher": "hasanozovali",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-rails-view-component.git"
  },
  "bugs": {
    "url": "https://github.com/aki77/vscode-rails-view-component/issues"
  },
  "activationEvents": [
    "workspaceContains:app/components/**/*_component.rb"
  ],
  "license": "MIT",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "contributes": {
    "commands": [
        {
            "command": "rails-test.rails-test",
            "title": "Quick Open Selection"
        },
        {
            "command": "rails-test.view-component-ruby",
            "title": "Open view component ruby file"
        },
        {
            "command": "rails-test.change-to-rb-file",
            "title": "Open .rb file of the component .html.erb or _spec.rb file"
        },
        {
            "command": "rails-test.change-to-rspec-file",
            "title": "Open _spec.rb file of the component .html.erb or .rb file"
        },
        {
            "command": "rails-test.change-to-html-erb-file",
            "title": "Open .html.erb file of the component .rb or _spec.rb file"
        }
    ],
    "keybindings": [
        {
            "command": "rails-test.rails-test",
            "key": "ctrl+p",
            "mac": "cmd+p"
        },
        {
            "command": "rails-test.view-component-ruby",
            "key": "ctrl+[",
            "mac": "cmd+["
        },
        {
            "command": "rails-test.change-to-rb-file",
            "key": "alt+i"
        },
        {
            "command": "rails-test.change-to-rspec-file",
            "key": "alt+p"
        },
        {
            "command": "rails-test.change-to-html-erb-file",
            "key": "alt+o"
        }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
